<% include ../partials/header %>


<div class="container">
  <div class="text-center">
    
  </div>
  <div class="message-form">
      <h1>Password Reset</h1>
  </div>

	<div class="container">	
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12">
				<form name="reset" class="form-horizontal" action"/profile/reset" onsubmit="return validateForm()" method="POST">
					<!-- Text input-->
					<div>
						<label class="control-label" for="email">Your SSO:</label><br>
						<input name="username" type="text" placeholder="Enter your SSO" class="form-control input-md" required>
					</div>
					<div>
						<label class="control-label" for="email">New Password:</label><br>
						<input name="password" type="password" placeholder="Enter new password" class="form-control input-md" required>
					</div>
					<div>
						<label class="control-label" for="email">Confirm New Password:</label><br>
						<input name="confirm" type="password" placeholder="Confirm new password" class="form-control input-md">
					</div>
					<br>
					<!-- Button -->
						<button id="signup" name="signup" class="btn btn-default btn-signup btn-block">Submit</button>
				</form>
			</div>	
		</div>					
	</div>
	<br>
	<br>
	<br>
</div>	
<script>
function validateForm() {
    var y = document.forms["reset"]["password"];
    var z = document.forms["reset"]["confirm"];
    if (y.value != z.value) { 
	   alert("Your password and confirmation password do not match.");
	   z.focus();
	   return false; 
	}
}
</script>	

