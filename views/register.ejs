<% include partials/header %>

<div class="container">
  <div class="message-form">
      <h1>Sign Up</h1>
  </div>
  <div class="add-form">
    <form action="/register" method="POST">
      <div class="form-group">
        <label for="userSSO">SSO:</label>
        <input type="text" class="form-control" name="username" placeholder="Enter your SSO">
      </div>
      <div class="form-group">
        <label for="userPASS">Password:</label>
        <input type="password" class="form-control" name="password" placeholder="Enter your password">
      </div>
      <button type="submit" class="btn btn-delete btn-block">Submit</button>
      <a class="btn btn-default btn-def btn-block" href="/posts">Back</a>
          <br><br>
    </form>
  </div>
</div>

<% include partials/footer %>